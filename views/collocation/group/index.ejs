<script type="text/javascript" src="../javascripts/collocation-group.js"></script>
<table id="group"></table>

<div id="group_tool" style="padding:5px;">
    <div style="margin-bottom:5px;">
        <a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="group_tool.add();">添加</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="group_tool.edit();">修改</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-cancel" plain="true" onclick="group_tool.remove();">删除</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-reload" plain="true" onclick="group_tool.reload();">刷新</a>
        <a href="#" class="easyui-linkbutton" iconCls="icon-redo" plain="true" id="redo" onclick="group_tool.redo();">取消选择</a>
    </div>
    <form id="group_search" method="post">
        <div style="padding:0 0 0 7px;color:#333;">
            班组名称：<input type="text" class="textbox" name="search_group" style="width:150px">
            <a href="#" class="easyui-linkbutton" iconCls="icon-search" onclick="group_tool.search();">查询</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-reset" onclick="group_tool.reset();">重置</a>
        </div>
    </form>
</div>

<!--新增-->
<form id="group_add" style="margin:0;padding:5px 0 0 25px;color:#333;">
    <p>班组名称：<input type="text" name="name" class="textbox" style="width:200px;"></p>
    <p>所属酒店：<input class="text" id="hotel_id" name="hotel_id" style="width:200px;"></p>
    <p>开始时间：<input id="begin_time" name="begin_time" style="width:200px;"></p>
    <p>结束时间：<input id="end_time" name="end_time" style="width:200px;"></p>
    <p>备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注：<input type="text" name="note" class="textbox" style="width:200px;"></p>
</form>

<!--编辑-->
<form id="group_edit" style="margin:0;padding:5px 0 0 25px;color:#333;">
    <p><input type="hidden" name="id" class="textbox" style="width:200px;"></p>
    <p>班组名称：<input type="text" name="name_edit" disabled="true" class="textbox" style="width:200px;"></p>
    <p>所属酒店：<input type="text" name="hotel_id_edit" class="textbox" style="width:200px;"></p>
    <p>开始时间：<input type="text" name="begin_time_edit" style="width:200px;"></p>
    <p>结束时间：<input type="text" name="end_time_edit" style="width:200px;"></p>
    <p>备&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;注：<input type="text" name="note_edit" class="textbox" style="width:200px;"></p>
</form>