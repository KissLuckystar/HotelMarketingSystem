            <a href="#" class="easyui-linkbutton" iconCls="icon-search" onclick="marketing_tool.search();">查询</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-reset" onclick="marketing_tool.reset();">重置</a>
        </div>
    </form>
</div>

