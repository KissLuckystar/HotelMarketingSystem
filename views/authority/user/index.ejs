                            <input type="text" id="userPhone_e" name="userPhone_e" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="col-sm-2 control-label">所属酒店:</label>
                        <div class="col-sm-10">
                            <select id="userHotelCode_e" name="userHotelCode_e" class="form-control">
                                <% hotels.forEach(function(hotel){ %>
                                <option value="<%= hotel.hotel_name %>"><%= hotel.hotel_name %></option>
